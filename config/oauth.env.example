# OAuth 2.0 Configuration
# Base URL for OAuth redirects (should be your deployed frontend URL)
BASE_URL=http://localhost:5173

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Microsoft OAuth Configuration
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here

# Fitbit OAuth Configuration
FITBIT_CLIENT_ID=your_fitbit_client_id_here
FITBIT_CLIENT_SECRET=your_fitbit_client_secret_here

# Generic OAuth Provider Configuration
GENERIC_AUTH_URL=https://example.com/oauth/authorize
GENERIC_TOKEN_URL=https://example.com/oauth/token
GENERIC_USER_INFO_URL=https://example.com/oauth/userinfo
GENERIC_CLIENT_ID=your_generic_client_id_here
GENERIC_CLIENT_SECRET=your_generic_client_secret_here
GENERIC_SCOPES=read,write

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:5173

# Webhook Configuration (Optional)
WEBHOOK_SECRET=your_webhook_secret_for_sync_notifications

# Data Sync Configuration
DEFAULT_SYNC_INTERVAL=0 */6 * * *
DEFAULT_BATCH_SIZE=100
DEFAULT_SYNC_WINDOW_HOURS=24
DEFAULT_MAX_RETRIES=3